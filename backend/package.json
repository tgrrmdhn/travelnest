{
  "name": "travelnest-backend",
  "version": "1.0.0",
  "description": "TravelNest Backend API with Node.js, Express, and SQLite",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "migrate": "node src/config/migrate.js",
    "seed": "node src/config/seed.js",
    "reset": "node src/config/reset.js",
    "build": "cd ../frontend && npm run build",
    "build:full": "npm run build && npm run start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . -f html -o eslint-report.html",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "security:audit:report": "npm audit --json > npm-audit-report.json"
  },
  "keywords": [
    "travelnest",
    "couchsurfing",
    "express",
    "sqlite"
  ],
  "author": "TravelNest Team",
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.17.0",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "prom-client": "^15.1.3",
    "socket.io": "^4.6.0",
    "validator": "^13.15.26",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
